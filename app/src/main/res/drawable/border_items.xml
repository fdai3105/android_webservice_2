<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#00FF1745"
                android:startColor="?attr/border"
                android:type="linear"/>
            <stroke android:width="2dp" android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundd_2"/>
        </shape>
    </item>

</layer-list>