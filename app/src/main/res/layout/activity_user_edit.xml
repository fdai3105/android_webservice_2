<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dashboard.user.activitis.UserEditActivity">


    <LinearLayout
        android:id="@+id/view_userEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_UserEdit_Image"
                android:layout_width="166dp"
                android:layout_height="166dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/placeholder_user"
                app:civ_border_color="@color/background_light"
                app:civ_border_width="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="false"
                android:layout_marginBottom="20dp"
                android:textColorHint="?attr/textt_2"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/textt"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="user name: "
                    android:textColor="?attr/textt"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:hintAnimationEnabled="false"
                android:textColorHint="?attr/textt_2"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:backgroundTint="?attr/textt"
                    android:hint="Fullname: "
                    android:textColor="?attr/textt"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/llGender"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="?attr/textt"
                    android:text="Gender: " />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/et_UserEdit_Gender"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:buttonTint="#B6B4CA"
                        android:id="@+id/et_UserEdit_Gender_Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textt"
                        android:text="Male"
                        android:layout_marginEnd="20dp"/>

                    <RadioButton
                        android:buttonTint="#B6B4CA"
                        android:id="@+id/et_UserEdit_Gender_Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textt"
                        android:text="Female" />
                </RadioGroup>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:hintAnimationEnabled="false"
                android:textColorHint="?attr/textt_2"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/textt"
                    android:hint="Email: "
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/textt"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColorHint="?attr/textt_2"
                app:hintAnimationEnabled="false"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/textt"
                    android:hint="Phone number: "
                    android:inputType="phone"
                    android:textColor="?attr/textt"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColorHint="?attr/textt_2"
                app:hintAnimationEnabled="false"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/textt"
                    android:hint="Address: "
                    android:textColor="?attr/textt"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColorHint="?attr/textt_2"
                app:hintAnimationEnabled="false"
                app:hintTextColor="?attr/textt_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_UserEdit_Bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/textt"
                    android:hint="Bio: "
                    android:textColor="?attr/textt"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>