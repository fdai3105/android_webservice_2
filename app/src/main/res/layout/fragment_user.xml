<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundd"
    android:orientation="vertical"
    tools:context=".dashboard.user.fragments.UserFragment">

    <LinearLayout
        android:id="@+id/tvfragmentUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_rounder16"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivfragmentUserImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/placeholder_user"
            app:civ_border_color="@color/background_light"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvfragmentUserFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name user"
                android:fontFamily="@font/robotoregular"
                android:textColor="?attr/textt"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvfragmentUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Your Profile"
                android:textColor="?attr/textt_2"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>