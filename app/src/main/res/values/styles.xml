<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    //ALL THEME>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--        Overlay actionbar and statusbar-->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="UserEditThemeLight" parent="AppTheme">
        <!--        Overlay actionbar and statusbar-->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionBarStyle">@style/style_actionbar_trans</item>

        <item name="backgroundd">@color/background_light</item>
        <item name="textt">@color/text_dark</item>
        <item name="textt_2">@color/text_dark_2</item>
    </style>

    <style name="UserEditThemeDark" parent="AppTheme">
        <!--        Overlay actionbar and statusbar-->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionBarStyle">@style/style_actionbar_trans</item>

        <item name="backgroundd">@color/background_dark</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
    </style>

    <style name="DashboardThemeLight" parent="NoActionBar">
        <item name="backgroundd">@color/background_light</item>
        <item name="backgroundd_2">@color/background_light_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
        <item name="border">@color/colorPrimary</item>

        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>

    <style name="DashboardThemeDark" parent="NoActionBar">
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
        <item name="border">@color/colorPrimaryDark</item>

        <!--        -->
        <item name="itemIconTint">@color/text_light</item>
        <item name="itemTextColor">@color/text_light</item>
    </style>

    <style name="ItemDetailThemeLight" parent="NoActionBar">
        <item name="android:colorControlActivated">#FF1744</item>
        <item name="backgroundd">@color/background_light</item>
        <item name="backgroundd_2">@color/background_light_2</item>
        <item name="textt">@color/text_dark</item>
        <item name="textt_2">@color/text_dark_2</item>
    </style>

    <style name="ItemDetailThemeDark" parent="NoActionBar">
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
        <item name="border">@color/colorPrimaryDark</item>
    </style>

    <!--    NOT activity-->
    <style name="CustomDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="UserPragmentTheme_Light" parent="NoActionBar">
        <!--remove underline below preference-->
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listDivider">@null</item>

        <!--        set SwitchPreference switch color-->
        <item name="android:colorControlActivated">#FF1744</item>
        <item name="backgroundd">@color/background_light</item>
        <item name="backgroundd_2">@color/background_light_2</item>
        <item name="textt">@color/text_dark</item>
        <item name="textt_2">@color/text_dark_2</item>
    </style>

    <style name="UserPragmentTheme_Dark" parent="NoActionBar">
        <!--remove underline below preference-->
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listDivider">@null</item>

        <!--        set SwitchPreference switch color-->
        <item name="android:colorControlActivated">#FF1744</item>
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
    </style>

    <style name="HomeFragmentThem_Light" parent="NoActionBar">
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_dark</item>
        <item name="textt_2">@color/text_dark_2</item>
    </style>

    <style name="HomeFragmentThem_Dark" parent="NoActionBar">
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
    </style>

    <style name="CategoriesFragmentTheme_Light" parent="NoActionBar">
        <item name="backgroundd">@color/background_light</item>
        <item name="backgroundd_2">@color/background_light_2</item>
        <item name="textt">@color/text_dark</item>
        <item name="textt_2">@color/text_dark_2</item>
    </style>

    <style name="CategoriesFragmentTheme_Dark" parent="NoActionBar">
        <item name="backgroundd">@color/background_dark</item>
        <item name="backgroundd_2">@color/background_dark_2</item>
        <item name="textt">@color/text_light</item>
        <item name="textt_2">@color/text_light_2</item>
    </style>

    <!--    //ALL STYLE>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>-->
    <style name="style_actionbar_trans" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/transparent</item>
    </style>

</resources>
